<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clipToPadding="false">






                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp" >

                    <ImageView
                            style="@style/createEventIconStyle"
                            android:src="@drawable/ic_title_black_24dp"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="5.5dp"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp">

                        <EditText
                                android:id="@+id/event_title"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:hint="Title"
                                android:textColor="#252525"
                                android:paddingStart="6dp"
                                android:paddingEnd="6dp"
                                style="@style/createEventItemTextView" />


                    </LinearLayout>

                </LinearLayout>

                <View style="@style/createEventSeparator"
                      android:layout_marginStart="57dp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp">

                    <ImageView
                            style="@style/createEventIconStyle"
                            android:src="@drawable/ic_short_text_black_24dp"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingTop="7dp"
                            android:paddingBottom="6.5dp"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp">



                        <EditText
                            android:id="@+id/event_description"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:hint="Description"
                            android:textColor="#252525"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            style="@style/createEventItemTextView" />



                    </LinearLayout>

                </LinearLayout>

                <View style="@style/createEventSeparator"
                      android:layout_marginStart="57dp"/>


                <!-- START DATE CALENDAR AND TEXT -->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp" >

                    <ImageView
                            style="@style/createEventIconStyle"
                            android:src="@drawable/ic_clock_black_24dp"/>
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingTop="7dp"
                            android:paddingBottom="6.5dp"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp">

                        <TextView
                                android:id="@+id/start_text"
                                android:layout_width="82dp"
                                android:layout_weight="1"
                                android:text="Start"
                                android:textColor="#252525"
                                android:paddingStart="6dp"
                                android:paddingEnd="6dp"
                                style="@style/createEventItemTextView" android:layout_height="match_parent"/>

                    <TextView
                            android:id="@+id/start_date"
                            style="@style/createEventItemTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:layout_margin="0dp"
                            android:background="?selectableItemBackground"
                            android:textColor="#252525"
                            android:gravity="end"
                            android:paddingTop="6.5dp"
                            android:paddingBottom="6.5dp"
                            android:paddingEnd="8dp"
                            android:paddingStart="8dp"
                            tools:text="tuesday, 27/03   17:00" />
                    </LinearLayout>

                </LinearLayout>


                <!-- END DATE CALENDAR AND TEXT -->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp" >
                    <ImageView
                            style="@style/createEventIconStyle"
                            />

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingTop="7dp"
                            android:paddingBottom="6.5dp"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp">

                        <TextView
                                android:id="@+id/end_text"
                                android:layout_width="82dp"
                                android:layout_weight="1"
                                android:text="End"
                                android:textColor="#252525"
                                android:paddingStart="6dp"
                                android:paddingEnd="6dp"
                                style="@style/createEventItemTextView" android:layout_height="match_parent"/>

                        <TextView
                                android:id="@+id/end_date"
                                style="@style/createEventItemTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:layout_margin="0dp"
                                android:background="?selectableItemBackground"
                                android:textColor="#252525"
                                android:gravity="end"
                                android:paddingTop="6.5dp"
                                android:paddingBottom="6.5dp"
                                android:paddingEnd="8dp"
                                android:paddingStart="8dp"
                                tools:text="tuesday, 27/03   17:00" />
                    </LinearLayout>

                </LinearLayout>

                <View style="@style/createEventSeparator"
                      android:layout_marginStart="57dp"/>

            <!-- LOCATION SELECTION AND TEXT -->

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp" >

            <ImageView
                    style="@style/createEventIconStyle"
                    android:src="@drawable/ic_map_black_24dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="5.5dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                <EditText
                        android:id="@+id/event_location"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:hint="Location"
                        android:textColor="#252525"
                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        style="@style/createEventItemTextView" />

            </LinearLayout>
            </LinearLayout>

                <View style="@style/createEventSeparator"
                      android:layout_marginStart="57dp"/>

                <!-- EVENT TYPE SELECTION -->

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp" >

                    <ImageView
                            style="@style/createEventIconStyle"
                            android:src="@drawable/ic_arrow_drop_down_black_24dp"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal"
                            android:layout_marginTop="1dp"
                            android:layout_marginBottom="1dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="5.5dp"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp">

                        <Spinner
                                android:id="@+id/event_type_spinner"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:textColor="#252525"
                                android:paddingStart="6dp"
                                android:paddingEnd="6dp"
                                />

                    </LinearLayout>
                </LinearLayout>

            <View style="@style/createEventSeparator"
                  android:layout_marginStart="57dp"/>

                <!-- IMAGE SELECTION -->

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp" >

            <ImageView
                    style="@style/createEventIconStyle"
                    android:src="@drawable/ic_insert_photo_black_24dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="5.5dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">

                <ImageView
                        android:id="@+id/selected_picture"
                        android:layout_width="100dp"
                        android:layout_weight="2"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_insert_photo_black_24dp"

                        android:paddingStart="6dp"
                        android:paddingEnd="6dp"
                        android:paddingRight="40dp"
                />


            </LinearLayout>
            </LinearLayout>

                <View style="@style/createEventSeparator" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">


                    <Button
                            android:id="@+id/Cancel"
                            style="@style/Widget.AppCompat.Button"
                            android:text="Cancel"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="60dp"
                            android:layout_marginLeft="45dp"
                            android:layout_marginRight="15dp"
                    />

                    <Button
                            android:id="@+id/Save"
                            android:text="Save"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="60dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="30dp"

                            style="@style/Widget.AppCompat.Button"
                    />
                </LinearLayout>











            </LinearLayout>





    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>