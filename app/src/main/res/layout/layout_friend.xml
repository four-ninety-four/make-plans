<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="165dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
              <ImageView
                      android:layout_width="100dp"
                      android:layout_height="152dp"
                      android:layout_alignParentStart="true"
                      android:layout_alignParentTop="true"
                      tools:srcCompat="@tools:sample/avatars[0]"
                      android:id="@+id/friendImageView"/>
            <TextView
                    android:text="First Name Last Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/friendNameView"
                    android:layout_toEndOf="@id/friendImageView"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"/>
            <TextView
                    android:text="Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/friendEmailView"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_below="@id/friendNameView"
                    android:layout_toEndOf="@id/friendImageView"
            />
            <Button
                    android:text="Add Friend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/addFriendButton"
                    android:layout_toEndOf="@id/friendImageView"
                    android:layout_below="@id/friendEmailView"
                    android:layout_marginTop="57dp"
                    android:layout_marginStart="75dp"/>
            <Button
                    android:text="Delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/deleteButton"
                    android:layout_below="@id/friendEmailView"
                    android:layout_toEndOf="@id/addFriendButton"
                    android:layout_marginTop="57dp"
                    android:layout_marginStart="5dp"/>
            <TextView
                    android:text="@string/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/friendCityView"
                    android:layout_below="@id/friendEmailView"
                    android:layout_toRightOf="@id/friendImageView"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"/>
            <TextView
                    android:text="@string/state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/friendStateView"
                    android:layout_toEndOf="@id/friendCityView"
                    android:layout_below="@+id/friendEmailView"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="6dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
